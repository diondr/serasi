<?xml version="1.0" encoding="UTF-8"?>
    <widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.diondr.serasi" version="1.0.0">

        <name>serasi</name>

        <description>
            Sistem respirasi.
        </description>

        <author href="http://twitter.com/diondr" email="ikidiondr@gmail.com">
            diondr
        </author>

        <gap:platform name="android" />

        <preference name="fullscreen" value="false" />
        <preference name="LoadingDialog" value="Mohon tunggu, aplikasi sedang diproses." />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="KeepRunning" value="true" />

        <icon src="icon.png" />
        <icon src="assets/img/icon/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
        <icon src="assets/img/icon/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
        <icon src="assets/img/icon/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
        <icon src="assets/img/icon/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />

        <gap:splash src="splash.png" />
        <gap:splash src="assets/img/splash/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="port-ldpi" />
        <gap:splash src="assets/img/splash/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="port-mdpi" />
        <gap:splash src="assets/img/splash/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="port-hdpi" />
        <gap:splash src="assets/img/splash/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xhdpi" />

        <gap:plugin name="org.apache.cordova.camera" />
        <gap:plugin name="org.apache.cordova.media-capture" />
        <gap:plugin name="org.apache.cordova.device" />
        <gap:plugin name="org.apache.cordova.device-orientation" />
        <gap:plugin name="org.apache.cordova.console" />
        <gap:plugin name="org.apache.cordova.contacts" />
        <gap:plugin name="org.apache.cordova.device-motion" />
        <gap:plugin name="org.apache.cordova.file" />
        <gap:plugin name="org.apache.cordova.file-transfer" />
        <gap:plugin name="org.apache.cordova.network-information" />
        <gap:plugin name="org.apache.cordova.media" />
        <gap:plugin name="org.apache.cordova.inappbrowser" />
        <gap:plugin name="org.apache.cordova.globalization" />
        <gap:plugin name="org.apache.cordova.dialogs" />
        <gap:plugin name="org.apache.cordova.splashscreen" />
        <gap:plugin name="org.apache.cordova.vibration" />

        <gap:plugin name="com.dawsonloudon.videoplayer" version="1.0.0" />

        <access origin="*" />
    </widget>